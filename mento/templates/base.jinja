<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width">
        <link rel="stylesheet" href="{{ static('css/bootstrap.min.css') }}">
        <link rel="stylesheet" href="{{ static('css/main.css') }}">
        <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css">
        <title>{% block title %}CycleMento{% endblock %}</title>
    </head>
    <body>
        {%- block header -%}
        <nav class="navbar navbar-default navbar-cycle">
            <div class="container nav-container">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#navmenu-collapse">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    {% if user.is_authenticated() %}
                    <a class="navbar-brand navbar-brand-cycle" href="{{ url("dashboard") }}">
                    {% else %}
                    <a class="navbar-brand navbar-brand-cycle" href="{{ url("home") }}">
                    {% endif %}
                        <img alt="Brand" src="{{ static('img/logo-main.png') }}" class="navbar-logo">
                    </a>
                </div>
                <div class="collapse navbar-collapse" id="navmenu-collapse">
                    <ul class="nav navbar-nav">
                        <li><a href="{{ url("home") }}#faq">FAQ</a></li>
                        <li><a href="{{ url("feedback") }}">Contact</a></li>
                    </ul>
                    {% if user.is_authenticated() %}
                    <ul class="nav navbar-nav navbar-right">
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button">{{user.username}} <span class="caret"></span></a>
                            <ul class="dropdown-menu" role="menu">
                                <li><a href="{{ url("dashboard") }}" class="navbar-link">dashboard</a></li>
                                <li><a href="{{ url("settings") }}" class="navbar-link">settings</a></li>
                                <li class="divider"></li>
                                <li><a href="{{ url("logout") }}" class="navbar-link">logout</a></li>
                            </ul>
                        </li>
                    </ul>
                    {% else %}
                    <ul class="nav navbar-nav navbar-right">
                        <li><a href="{{ url("login") }}" class="navbar-link">Login</a></li>
                        <li><a href="{{ url("register") }}" class="navbar-link">Sign Up</a></li>
                    </ul>
                    {% endif %}
                </div>
          </div>
        </nav>
        {% endblock %}

        {%- block underheader -%}
        {%- endblock -%}
        <div class="container">
          {%- block content %}
          {% endblock -%}
        </div>
        <div class="container-fluid footer">
            <div class="center">
                Copyright &copy; 2015 CycleMento 
            </div>
        </div>
        <script type="text/javascript" charset="utf-8" src="//cdnjs.cloudflare.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>
        <script type="text/javascript" charset="utf-8" src="{{ static('js/bootstrap.min.js') }}"></script>
        <!-- Piwik -->
        <script type="text/javascript">
            var _paq = _paq || [];
            _paq.push(['trackPageView']);
            _paq.push(['enableLinkTracking']);
            (function() {
                var u="//analytics.buddylindsey.com/";
                _paq.push(['setTrackerUrl', u+'piwik.php']);
                _paq.push(['setSiteId', 1]);
                var d=document, g=d.createElement('script'), s=d.getElementsByTagName('script')[0];
                g.type='text/javascript'; g.async=true; g.defer=true; g.src=u+'piwik.js'; s.parentNode.insertBefore(g,s);
            })();
        </script>
        <noscript><p><img src="//analytics.buddylindsey.com/piwik.php?idsite=1" style="border:0;" alt="" /></p></noscript>
        <!-- End Piwik Code -->
    </body>
</html>
