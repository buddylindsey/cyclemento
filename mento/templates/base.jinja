<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width">
        <link rel="stylesheet" href="{{ static('css/bootstrap.min.css') }}">
        <link rel="stylesheet" href="{{ static('css/main.css') }}">
        <title>{% block title %}CycleMento{% endblock %}</title>
    </head>
    <body>
        <header>
          <div class="container">
            <nav class="navbar navbar-cycle">
              <div class="container-fluid">
                <div class="navbar-header">
                  <a class="navbar-brand navbar-brand-cycle" href="{{ url("home") }}"><img alt="CycleMento" src="{{ static('img/header-logo.png') }}"></a>
                </div>
                <p class="navbar-text navbar-right">
                  {% if user.is_authenticated() %}
                  <a href="{{ url("dashboard") }}" class="navbar-link">{{user.username}}</a> | <a href="{{ url("logout") }}">logout</a>
                  {% else %}
                  <a href="{{ url("login") }}" class="navbar-link">Login</a>
                  {% endif %}
                </p>
              </div>
            </nav>
          </div>
        </header>
        <div class="container">
          {%- block content %}
          {% endblock -%}
        </div>
        <script type="text/javascript" charset="utf-8" src="{{ static('js/bootstrap.min.js') }}"></script>
    </body>
</html>
