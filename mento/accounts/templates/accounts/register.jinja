{% extends "base.jinja" %}

{% block content %}
{% include "accounts/messages.jinja" %}
<div class="row">
    <div class="col-md-offset-3 col-md-6">
        <div class="registration">
            <div class="registration-header">
                <h1>Join CycleMento Today</h1>
            </div>
            <div class="registration-panel">
                {% if form.errors %}
                {% for error in form.errors %}
                    {{ error }}
                {% endfor %}
                {% endif %}
                <form action="" method="post">
                    {% csrf_token %}
                    <div class="form-group">
                        {{ form.username.errors }}
                        <input type="text" class="form-control" name="username" id="username" placeholder="Username" required />
                    </div>
                    <div class="form-group">
                        {{ form.email.errors }}
                        <input type="email" class="form-control" name="email" id="email" placeholder="Email" required />
                    </div>
                    <br />
                    <div class="form-group">
                        {{ form.password1.errors }}
                        <input type="password" class="form-control" name="password1" id="password1" placeholder="Password" required />
                    </div>
                    <div class="form-group">
                        {{ form.password2.errors }}
                        <input type="password" class="form-control" name="password2" id="password2" placeholder="Confirm Password" required />
                    </div>
                    <input type="submit" class="btn btn-signup" name="signup" value="Sign Up" />
                </form>
            </div>
        </div>
    </div>
</div>
{% endblock %}
